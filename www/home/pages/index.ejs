        <main>

            <!-- hero start -->
            <div class="hero hero__height ul_li" data-background="assets/img/bg/hero_bg.jpg">
                <div class="container">
                    <div class="row align-items-center mt-none-30">
                        <div class="col-lg-9 mt-30">
                            <div class="row align-items-center flex-row-reverse mt-none-30">
                                <div class="col-lg-7 mt-30">
                                    <div class="hero__product">
                                        <div class="hero__product-wrap">
                                            <div class="hero__product-carousel">
                                                <% slider.forEach(element => { %>
                                                    
                                             
                                                <div class="hero__product-item">
                                                    <img src="/slider/<%- element.slidegorsel  %>" alt="">
                                                </div>
                                                
                                            <% }); %>
                                            </div>
                                            <div class="hero__product-carousel-nav">
                                                <% slider.forEach(element => { %>
                                                    
                                              
                                                <div class="hero__product-item-nav">
                                                    <div class="image">
                                                        <img src="/slider/<%- element.slidegorsel  %>" alt="">
                                                    </div>
                                                </div>
                                            <% }); %>
                                            </div>
                                          
                                        </div>
                                    </div>
                                </div>
                                <% slider.slice(0, 1).forEach(element => { %>
                                    
                              
                                <div class="col-lg-5 mt-30">
                                    <div class="hero__content">
                                        <span class="subtitle">Sıcak İhale</span>
                                        <h2 class="title"><%- element.slideadi  %><br></h2>
                                        <p><%- element.slidealtadi  %></p>
                                        <h3 class="price"> <%- element.slideurunbaslangicfiyati  %> TL / <span><del><%- element.slideindirimlifiyati  %> TL</del></span></h3>
                                        <div class="mxw_343 mb-20">
                                            <div class="product__progress progress h-16 color-primary">
                                                <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            
                                        </div>
                                        <a class="hero__btn" href="<%- element.slideurunlinki  %>">İhaleye Katıl <i class="far fa-long-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>  <% }); %>
                        </div>
                        <div class="col-lg-3 col-md-6 mt-30">
                            <div class="hot-deal__slide-wrap style-2 bg-white ">
                                <h2 class="section-heading mb-25"><span>Popüler İhaleler</span></h2>
                                <div class="hot-deal__slide tx-arrow">
                                    <% urunler.forEach(element => { %>
                                        
                                  
                                    <div class="hot-deal__item text-center">
                                        <div class="thumb">
                                            <a href="/urunler/<%- element.ihaleurl  %>">
                                                <img src="/urungorselleri/<%- element.urungorsel1  %>" alt="">
                                            </a>
                                        </div>
                                        <div class="content">
                                            <ul class="rating-star ul_li_center mr-10">
                                                <li><i class="fas fa-star"></i></li>
                                                <li><i class="fas fa-star"></i></li>
                                                <li><i class="fas fa-star"></i></li>
                                                <li><i class="far fa-star"></i></li>
                                                <li><i class="far fa-star"></i></li>
                                            </ul>
                                            <h2 class="title mb-15"><a href="/urunler/<%- element.ihaleurl  %>"><%- element.urunadi  %></a></h2>
                                            <h4 class="product__price mb-20"><span class="Yeni"><%-  element.urunfiyati  %> TL</span><span class="old"><%- element.urunfiyati  %> TL</span></h4>
                                            <div class="mxw_216 m-auto">
                                                <div class="product__progress progress mb-6 h-8 color-primary">
                                                    <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                               
                                            </div>
                                        </div>
                                    </div>
                                <% });  %>
                                 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- hero end -->
            
            <!-- feature start -->
            <div class="feature pt-40 pb-30">
                <div class="container">
                    <div class="feature__wrap ul_li">
                        <div class="feature__item ul_li">
                            <div class="icon">
                                <img src="/home/img/img/icon/feat_01.svg" alt="">
                            </div>
                           
                                
                          
                            <div class="content">
                                <h3><%- anasayfa.ozellik1  %></h3>
                                <p><%- anasayfa.altozellik1  %></p>
                            </div>
                        </div>
                        <div class="feature__item ul_li">
                            <div class="icon">
                                <img src="/home/img/img/icon/feat_02.svg" alt="">
                            </div>
                        
                            <div class="content">
                                <h3><%- anasayfa.ozellik2  %></h3>
                                <p><%- anasayfa.altozellik2  %></p>
                            </div>
                        </div>
                        <div class="feature__item ul_li">
                            <div class="icon">
                                <img src="/home/img/img/icon/feat_03.svg" alt="">
                            </div>
                            <div class="content">
                                <h3><%- anasayfa.ozellik3  %></h3>
                                <p><%- anasayfa.altozellik3  %></p>
                            </div>
                        </div>
                        <div class="feature__item ul_li">
